{
    //! Disable the Prettier formatter
    "prettier.enable": false,
    //! General
    "css.validate": false,
    "less.validate": false,
    "scss.validate": false,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit",
        "source.fixAll.stylelint": "explicit",
        "source.organizeImports": "never",
        "source.addMissingImports": "explicit"
    },
    // "eslint.codeActionsOnSave.mode": "problems",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "javascript.format.insertSpaceBeforeFunctionParenthesis": false,
    "typescript.format.insertSpaceBeforeFunctionParenthesis": false,
    //! ESlint
    "eslint.options": {
        "overrideConfigFile": "./eslint.config.js"
    },
    "eslint.workingDirectories": [
        {
            "mode": "auto"
        }
    ],
    "eslint.validate": [
        "javascript",
        "typescript",
        "javascriptreact",
        "typescriptreact",
        "html",
    ],
    "eslint.quiet": false,
    //! Stylelint
    "stylelint.packageManager": "pnpm",
    "stylelint.validate": [
        "css",
        "scss",
        "less"
    ],
    //! TailwindCSS
    "css.lint.unknownAtRules": "ignore",
    "files.associations": {
        "*.css": "css",
        "*.md": "mdx",
    },
    "tailwindCSS.classAttributes": [
        "class",
        "className",
        ".*Class(es)?",
        "ngClass",
        "tw",
        "classVar"
    ],
    "tailwindCSS.experimental.classRegex": [
        [
            "(?:clsx|cn|cc|cx|twg|cva|classnames|classList.add)\\(([^)(]*(?:\\([^)(]*(?:\\([^)(]*(?:\\([^)(]*\\)[^)(]*)*\\)[^)(]*)*\\)[^)(]*)*)\\)",
            "'([^']*)'"
        ],
        [
            "(?:clsx|cn|cc|cx|twg|cva|classnames|classList.add)\\(([^)(]*(?:\\([^)(]*(?:\\([^)(]*(?:\\([^)(]*\\)[^)(]*)*\\)[^)(]*)*\\)[^)(]*)*)\\)",
            "\"([^\"]*)\""
        ],
        [
            "(?:clsx|cn|cc|cx|twg|cva|classnames|classList.add)\\(([^)(]*(?:\\([^)(]*(?:\\([^)(]*(?:\\([^)(]*\\)[^)(]*)*\\)[^)(]*)*\\)[^)(]*)*)\\)",
            "`([^`]*)`"
        ],
    ],
    /** @see https://github.com/tailwindlabs/tailwindcss-intellisense/issues/868#issuecomment-2016530820 */
    "tailwindCSS.files.exclude": [
        "**/.git/**",
        "**/.next/**",
        "**/node_modules/**",
        "**/.hg/**",
        "**/.svn/**",
        "**/dist/**"
    ],
    "tailwindCSS.includeLanguages": {
        "javascript": "javascript",
        "html": "HTML",
        "mdx": "mdx",
        "markdown": "markdown",
    },
    //! Spell Checker
    "cSpell.words": [
        "autoplace",
        "autoplay",
        "autoprefixer",
        "Bitness",
        "blockless",
        "Callees",
        "classname",
        "clsx",
        "cmdk",
        "compat",
        "embla",
        "extralight",
        "fbsbx",
        "googleusercontent",
        "GTGT",
        "hookform",
        "limegrass",
        "linebreak",
        "linebreaks",
        "logomark",
        "lookaside",
        "lucide",
        "motionone",
        "nextjs",
        "nonblock",
        "noopen",
        "nosniff",
        "nprogress",
        "nunito",
        "overlayscrollbars",
        "phongvibanhxua",
        "Picsum",
        "profilepic",
        "pvbx",
        "roboto",
        "SAMEORIGIN",
        "stylelint",
        "tailwindcss",
        "tseslint",
        "unspaced",
        "vaul",
        "zalo",
        "zustand"
    ]
}
